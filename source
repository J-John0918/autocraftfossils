local function executeProcess(fossilName, skipBuy)
    -- Collect
    game:GetService("ReplicatedStorage").API:FindFirstChild("MiningAPI/ClaimMachineAction"):InvokeServer("Pet")
    wait(3)

    -- Buy 4x if skipBuy is false
    if not skipBuy then
        for i = 1, 4 do
            game:GetService("ReplicatedStorage").API:FindFirstChild("MiningAPI/PurchaseFossilPack"):FireServer(fossilName)
            wait(3)
        end
    end

    -- Place
    game:GetService("ReplicatedStorage").API:FindFirstChild("MiningAPI/UpdateNPCFlag"):FireServer("first_time_fossil_machine", 1)
    wait(3)

    -- Pay
    game:GetService("ReplicatedStorage").API:FindFirstChild("MiningAPI/StartMachineAction"):InvokeServer("Pet", fossilName)
    wait(3)
end

local function repeatProcess(fossilName, repetitions, skipBuy)
    for _ = 1, repetitions do
        executeProcess(fossilName, skipBuy)
        wait(21 * 60) -- 21 minutes delay
    end
end

-- Example usage for each dinosaur to include remove the -- at start of line number - repetitions - True = Buy fossils / fasle = dont buy
--repeatProcess("fossil_2024_brachiosaurus_fossil", 16, false)  -- With buy 16 
--repeatProcess("fossil_2024_velociraptor_fossil", 0, true)   -- Without buy infinate
repeatProcess("fossil_2024_elasmosaurus_fossil", 99, true)   -- With buy 16
--repeatProcess("fossil_2024_ankylosaurus_fossil", 16, true)    -- Without buy 16
